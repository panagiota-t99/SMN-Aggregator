<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFacebookLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Facebook"
        app:layout_constraintEnd_toEndOf="@+id/btnInstagramLogin"
        app:layout_constraintStart_toStartOf="@+id/btnInstagramLogin"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInstagramLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Instagram"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFacebookLogin" />

    <Button
        android:id="@+id/btnTwitterLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Twitter"
        app:layout_constraintEnd_toEndOf="@+id/btnInstagramLogin"
        app:layout_constraintStart_toStartOf="@+id/btnInstagramLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnInstagramLogin" />
</androidx.constraintlayout.widget.ConstraintLayout>