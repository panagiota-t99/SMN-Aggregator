<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStoryFacebook"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/fb_style"
        android:clickable="true"
        android:text="Post Story on Facebook"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/btnStoryInstagram"
        app:layout_constraintStart_toStartOf="@+id/btnStoryInstagram"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStoryInstagram"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/insta_style"
        android:clickable="true"
        android:text="Post Story on Instagram"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStoryFacebook" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStoryTwitter"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/twitter_style"
        android:clickable="true"
        android:text="Post Fleet on Twitter"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/btnStoryInstagram"
        app:layout_constraintStart_toStartOf="@+id/btnStoryInstagram"
        app:layout_constraintTop_toBottomOf="@+id/btnStoryInstagram" />

</androidx.constraintlayout.widget.ConstraintLayout>